<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="woowacourse.shopping.common.model.ProductModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".productdetail.ProductDetailActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/product_detail_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/toolbar"
            app:titleTextColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/product_detail_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/product_detail_cart_button">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/product_detail_picture"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    loadPicture="@{product.picture}"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/product_detail_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{product.title}"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_picture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="[든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/space_between_title_price"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="13dp"
                    android:background="#AAAAAA" />

                <TextView
                    android:id="@+id/product_detail_price_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail_price"
                    app:layout_constraintTop_toBottomOf="@id/space_between_title_price"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:layout_marginStart="18dp" />

                <TextView
                    android:id="@+id/product_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/product_detail_price_header"
                    android:text="@{@string/product_price(product.price)}"
                    tools:text="99,800원"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="18dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
            android:id="@+id/product_detail_cart_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#04C09E"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/product_detail_cart_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
